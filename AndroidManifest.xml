<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="asbridge.me.uk.MMusic"
          android:versionCode="1"
          android:versionName="1.0">
    <uses-sdk android:minSdkVersion="17"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <application android:label="@string/app_name" android:icon="@drawable/ic_launcher">
        <activity android:name=".activities.MusicPlayerActivity"
                  android:label="MMusic"
                  android:launchMode="singleTop"
        >
        </activity>
        <activity android:name=".settings.SettingsActivity">
        </activity>
        <activity android:name=".activities.PlayAllActivivy" android:label="Play All Music" android:launchMode="singleTop">
        <intent-filter>
            <action android:name="android.intent.action.MAIN"/>
            <category android:name="android.intent.category.LAUNCHER"/>
        </intent-filter>
        </activity>
        <activity android:name=".activities.SelectSongsActivity" android:label="Select songs"/>
        <service android:enabled="true" android:name=".services.MusicService" />
        <service android:enabled="true" android:name=".services.SimpleMusicService" />
    </application>
</manifest>
