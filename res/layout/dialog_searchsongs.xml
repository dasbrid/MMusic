<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
            android:id="@+id/dlgSlideshowSpeedMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Enter a search word"
            android:textSize="16sp" />
    <EditText
            android:id="@+id/etSearchSongsString"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="#FF999999"
            android:singleLine="true"
            android:hint="New Playbucket"
            android:textSize="16sp">
    </EditText>


        <Button
                android:id="@+id/btnSearchSongsDialogOK"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Search" />

    <Button
            android:id="@+id/btnSearchSongsDialogCancel"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel" />
</LinearLayout>