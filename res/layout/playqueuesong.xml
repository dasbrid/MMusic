<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="5dp" >
    <LinearLayout android:layout_width="wrap_content" android:layout_height="fill_parent"
                  android:orientation="vertical">
    <TextView
            android:id="@+id/pqsong_title"
            android:text="title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF99"
            android:textSize="16sp"
            android:textStyle="bold" />

    <TextView
            android:id="@+id/pqsong_artist"
            android:text="artist"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textColor="#FFFFFF99"
            android:textSize="16sp" />
    </LinearLayout>
    <ImageButton
            android:id="@+id/pqbtnRemoveSong"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:contentDescription="remove from playqueue"
            android:onClick="btnRemoveSongClicked"
            android:src="@android:drawable/ic_menu_delete" />
</LinearLayout>