<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
            android:key="playqueuesize"
            android:summary="Set the number of songs in the play queue"
            android:title="Play queue size"
            android:numeric="integer"
            android:maxLength="2"
            android:defaultValue="10"
    />

    <EditTextPreference
            android:key="mindurationinseconds"
            android:summary="Minimum duration for songs (in seconds)"
            android:title="Minimum duration"
            android:numeric="integer"
            android:maxLength="2"
            android:defaultValue="20"
    />
</PreferenceScreen>